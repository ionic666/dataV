*{
    box-sizing: border-box;
    color: #f2f2f2;
    margin: 0;
    padding: 0;
    font-family: "微软雅黑", Helvetica, Arial, sans-serif;
}
html,.tundra{
    padding:0;
    margin:0;
    width:100%;
    height:100%;
}
li{
    list-style: none;
}

/*头部二级标题*/
p.headerTitle{
    padding-left: 3%;
    font-size: 20px;
    /*font-weight: bold;*/
    color:#F2F2F2;
    height: 12%;
    width: 40%;
    line-height: 38px;
    /*background-color: #656565;*/
    position: relative;
    font-family: "微软雅黑", Helvetica, Arial, sans-serif;
}
p.headerTitle img{
    height: 36px;
    position: absolute;
    right: 5%;
}
/*字体样式*/
.addBold{
    font-size: 16px;
    font-weight: bold;
}
.addYellow{
    font-size: 20px;
    font-weight: bold;
    color: #ffff00;
}
.addGreen{
    font-size: 20px;
    font-weight: bold;
    color: #008000;
}
.addRed{
    font-size: 20px;
    font-weight: bold;
    color: red;
}
