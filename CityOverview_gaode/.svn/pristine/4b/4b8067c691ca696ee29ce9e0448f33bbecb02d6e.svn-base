.hlw-info {
    border: solid 1px #889DA2;
    border-radius: 2px;
    box-shadow: 0px 0px 8px #60d8ef;
}
div.hlw-info-top {
    position: relative;
    background: none repeat scroll 0 0 #001D24;
    border-bottom: 1px solid #889DA2;
    border-radius: 5px 5px 0 0;
    padding: 6px 0;
}
div.hlw-info-top div {
    display: inline-block;
    color: #333333;
    font-size: 14px;
    font-weight: bold;
    line-height: 31px;
    padding: 0 10px;
}
div.hlw-info-top img {
    position: absolute;
    top: 17px;
    right: 10px;
    transition-duration: 0.25s;
    cursor: pointer;
}
div.hlw-info-top img:hover {
    box-shadow: 0px 0px 5px #60d8ef;
}
div.hlw-info-middle {
    font-size: 12px;
    padding: 0;
    line-height: 20px;
    background: #001D24;
}
div.hlw-info-bottom {
    height: 0px;
    width: 100%;
    clear: both;
    text-align: center;
}
div.hlw-info-bottom img {
    position: relative;
    z-index: 104;
}
span {
    margin-left: 5px;
    font-size: 11px;
}
.hlw-info-middle img {
    float: left;
    margin-right: 6px;
}


#hlwjjContent{
    position: relative;
    overflow: hidden;
    padding: 23px 1px 7px 38px;
}

#hlwjjContent .left-content{
    float:left;
    width:55%;
    display: inline-block;
    text-align: left;
    color:#32DDE7;
    margin:15px 0 15px 0;
    font-size: 18px;
}

#hlwjjContent .right-content{
    float:left;
    width:45%;
    display: inline-block;
    text-align: left;
    color:#fff;
    margin:15px 0 15px 0;
    font-size: 18px;
}

.hlw-info .hlw-xq{
    text-align: center;
    padding-bottom: 14px;
}

.hlw-info .hlw-xq a{
    transition: all 0.5s;
    color: #00BAE8;
    font-size: 16px;
    text-decoration: none;
    display: inline-block;
    width: 100px;
    border-radius: 12px;
    height: 32px;
    line-height: 32px;
    text-align: center;
    background: #002C36;
}

.hlw-info .hlw-xq a:hover{
    color:#fff;
    background: #001D24;
    box-shadow: 0px 0px 5px #60d8ef;
}


/*互联网经济头部标题*/
#hlwjjTopMessage{
    position: absolute;
    top: 12%;
    left: 30%;
    text-align: center;
    line-height: 28px;
    display: none;
    width: 747px;
    height: 30px;
    overflow: hidden;
}

#hlwjjTopMessage>div{
    position: absolute;
    top:0;
    left:0;
    height:100%;
}

#hlwjjTopMessage>div>span{
    color:#fff;
    font-size: 28px;
    line-height: 28px;
    white-space: nowrap;
}

#hlwjjTopMessage:before{
    content: '';
    position: absolute;
    top:0;
    left:0;
    width:90px;
    height:30px;
    z-index: 1000;
    background: linear-gradient(to right, rgba(0,0,0,0.7) 20%,rgba(0,0,0,0.4) 60%,transparent 100%);
}

#hlwjjTopMessage:after{
    content: '';
    position: absolute;
    top:0;
    right:0;
    width:90px;
    height:30px;
    background: linear-gradient(to left, rgba(0,0,0,0.7) 20%,rgba(0,0,0,0.4) 60%,transparent 100%);
    z-index: 1000;
}