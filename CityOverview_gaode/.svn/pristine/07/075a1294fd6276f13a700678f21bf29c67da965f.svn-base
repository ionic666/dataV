<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="../../myCss/iframe.css"/>
    <style type="text/css">
        body{
            padding: 10px 0 0 10px;
        }
        div.ldnlrk{
            width: 100%;
            height: 100%;
        }
        div.ldnlrkText{
            height: 25%;
        }
        div.ldnlrk ul{
            padding-top: 10px;
            padding-left: 10px;
            height: 100%;
        }
        div.ldnlrk ul li{
            width: 50%;
            float: left;
        }
        div#ldnlrk{
            height: 60%;
            width: 95%;
        }
    </style>
</head>
<body>
<div class="ldnlrk">
    <p class="headerTitle">
        劳动年龄人口
    </p>
    <div class="ldnlrkText">
        <ul>
            <li>
                <span class="addBold">2016年绝对数量及占总人口比例：</span>
            </li>
            <li>
                <span class="addBold">2017年预计绝对数量及占总人口比例：</span>
            </li>
            <li>
                <span class="addYellow" id="laodongsjsl"></span>
                <span class="addYellow" id="laodongsjbl"></span>
            </li>
            <li>
                <span class="addRed" id="laodongyjsl"></span>
                <span class="addRed" id="laodongyjbl"></span>
            </li>
        </ul>
    </div>
    <%--劳动年龄人口折线图--%>
    <div id="ldnlrk">
    </div>
</div>
<script src="../../map/js/jquery-1.11.3.js"></script>
<script src="../../myjs/echarts-all.js"></script>
<script>
    var font_color = '#BFBFBF', font_family = '微软雅黑', font_size = 7;
    var font_color_y = '#BFBFBF';
    var text_style={
        color:font_color,
        fontSize:font_size,
        fontFamily:font_family
    };
    function ldnlrk(xAxisData,data1,data2){
        data2 = data2 || [2.1, 3.2, 2.0, 1.6];
        var mycharts = echarts.init(document.getElementById('ldnlrk'));
        var option = {
            color:['#DA712F','#F3A282'],
            tooltip: {
                trigger: 'axis'
            },
            grid: {
                x: '10%',
                y: '10%',
                x2: '25%',
                y2: '13%',
                containLabel: true,
                borderWidth: 0
            },
            legend: {
                data: ['实际增长率', '预测增长率'],
                x: 'right',
                y: 'center',
                orient: 'vertical',
                textStyle: text_style
            },
            xAxis: {
                type: 'category',
                boundaryGap: ['20%', '20%'],
                axisTick: {show: true, lineStyle: {color: font_color}},
                axisLine: {show: false},
                axisLabel: {show: true, textStyle: text_style},
                splitLine: {show: false},
                data: xAxisData
            },
            yAxis: {
                type: 'value',
//                    min: 0, max: 0.006, splitNumber: 3,
                axisLine: {lineStyle: {color: font_color}},
                axisLabel: {show: true, textStyle: text_style},
                axisTick: {show: true, lineStyle: {color: font_color}},
                splitLine: {

                    show: true
                }

            },
            series: [
                {
                    name: '实际增长率',
                    type: 'line',
                    symbol: 'rectangle',
                    symbolSize: 3,
                    label: {
                        normal: {
                            show: true,
                            position: 'top',
                            textStyle: {
                                color: '#E86813'
                            }
                        }
                    },
                    data: data1
                },
                {
                    name: '预测增长率',
                    type: 'line',
                    symbol: 'triangle',
                    symbolSize: 3,
                    label: {
                        normal: {
                            show: true,
                            position: 'top',
                            textStyle: {
                                color: '#3C75E8'
                            }
                        }
                    },
                    data: data2
                }
            ]
        };
        mycharts.setOption(option);
    }
    //劳动年龄人口
    $.ajax({
        type:"POST",
        url:'../../jxpop/queryLdnlrk.do',
        dataType:'json',
        data:{"count":4},
        success:function(data) {
//                console.log("劳动年龄人口");
//                console.log(data);
            $("#laodongsjsl").append(data['Ldnl']+'万');
            $("#laodongsjbl").append(data['percent']+'%');
            var xAxisData=[];
            var data1=[];
            for(var key in data.ldnlzzl) {
                xAxisData.push(key);
                data1.push(parseFloat(data.ldnlzzl[key]));
            }
//                2016年实际增长率
            $("#rel").append(data['2016']+'%');
            //调用，生成劳动年龄人口图
            ldnlrk(xAxisData,data1);
        }
    });
</script>
</body>
</html>
